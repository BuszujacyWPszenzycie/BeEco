            <i class="fa-solid fa-seedling types__item-icon"></i>
            <h3 class="types__item-title">bio</h3>
          </div>

          <div class="types__item types__item--five">
            <i class="fa-solid fa-recycle types__item-icon"></i>
            <h3 class="types__item-title">zmieszane</h3>
